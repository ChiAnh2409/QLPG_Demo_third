@model QLPG.Models.HoiVien

@{
    ViewBag.Title = "DiemDanhHV";
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8">
    <title>Điểm danh hội viên</title>
    <link href="~/css/goitap.css" rel="stylesheet" />
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/assets/img/favicon.ico" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.0/normalize.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pixeden-stroke-7-icon@1.2.3/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.2.0/css/flag-icon.min.css">

</head>
<body>
    <div class="wrapper">
        <div class="title">
            Điểm danh hội viên
        </div>
        <form method="post" action="@Url.Action("DiemDanhHV", "HoiVien")">
            @Html.HiddenFor(model => model.id_HV)
            <div>
                <label>Tên Hội Viên: @Model.ThanhVien.TenTV</label>
            </div>
            <div>
                <label>Điểm danh: </label>
                <input type="radio" name="DaDiemDanh" value="true" /> Có
                <input type="radio" name="DaDiemDanh" value="false" /> Không
            </div>
            <div>
                <button type="submit" class="btn btn-outline-primary btn-lg btn-block" value="Cập nhật" >cập nhật</button>
            </div>
        </form>
    </div>
</body>
</html>
